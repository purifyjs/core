{
    "type": "module",
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "format": "prettier -w ./",
        "lint": "eslint .",
        "test": "tsx --test ./lib/*.test.ts",
        "test:dev": "tsx --test --watch ./lib/*.test.ts",
        "publish": "jsr publish",
        "publish:dry": "jsr publish --dry-run --allow-dirty",
        "vite:dev": "npm run dev --prefix ./apps/vite",
        "vite:build": "npm run build --prefix ./apps/vite",
        "compare:dev": "npm run dev --prefix ./apps/compare",
        "compare:build": "npm run build --prefix ./apps/compare",
        "compare:publish": "npm run publish --prefix ./apps/compare"
    },
    "devDependencies": {
        "@types/node": "22.7.5",
        "eslint": "9.12.0",
        "typescript-eslint": "8.8.1",
        "globals": "15.11.0",
        "prettier": "3.3.3",
        "prettier-plugin-organize-imports": "4.1.0",
        "prettier-plugin-svelte": "3.2.7",
        "tsx": "4.19.1",
        "jsr": "0.13.2"
    }
}
